  "software": {
    "base": {
      "name": "app_library",
      "framework": "rails5",
      "deployment_type": "web",
      "http_protocol": "http_and_https",
      "memory": {
        "required": 256,
        "recommended": 384
      }
    },
    "scripts": {
      "start": {
        "language": "sh",
        "content": "#!/bin/bash\r\n\r\ncd /home/app\r\ngit pull\r\necho migrating database \r\nbundle exec rake db:migrate \r\necho precompiling assests\r\nbundle exec rake assets:precompile  >/dev/null"
      },
      "install": {
        "language": "sh"
      },
      "post_install": {
        "language": "sh"
      },
      "shutdown": {
        "language": "sh"
      }
    },
    "installed_packages": [
      {
        "name": "app_library",
        "source_url": "https://github.com/lachdoug/app_library",
        "destination": "./",
        "extraction_command": "git",
        "path_to_extracted": "app_library"
      }
    ],
    "service_configurations": [
      {
        "publisher_namespace": "EnginesSystem",
        "type_path": "filesystem/local/filesystem",
        "variables": {
          "user": "_Engines_Builder(data_uid)",
          "group": "_Engines_Builder(data_gid)",
          "service_name": "_Engines_Builder(engine_name)",
          "volume_src": "",
          "engine_path": "persistent",
          "permissions": "rw"
        }
      },
      {
        "publisher_namespace": "EnginesSystem",
        "type_path": "database/sql/mysql",
        "variables": {
          "database_name": "_Engines_Builder(engine_name)",
          "database_host": "_Engines_System(mysql_host)",
          "db_username": "_Engines_Builder(engine_name)",
          "db_password": "_Engines_System(random(10))",
          "collation": "utf8_general_ci",
          "full_access": "false"
        }
      }
    ],
    "database_seed": {
      "language": "text"
    },
    "file_write_permissions": [
      {
        "path": "./",
        "recursive": true
      }
    ],
    "persistent_directories": [
      {
        "path": "app/public/system"
      }
    ],
    "framework_specific": {
      "rake_tasks": [
        {
          "action": "db:migrate",
          "always_run": true
        },
        {
          "action": "db:seed"
        },
        {
          "action": "assets:precompile",
          "always_run": true
        }
      ]
    }
  }
